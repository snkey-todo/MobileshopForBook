<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="10.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/pd_item_enable_bg"
            android:gravity="center|left"
            android:paddingLeft="14.0dip"
            android:text="商品总额"
            android:textColor="@color/fill_order_delivery_light"
            android:textSize="17.0dip" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/android_list_idex"
            android:clickable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/order_detail_goods_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/arrow_right"
            android:gravity="center|right"
            android:paddingLeft="14.0dip"
            android:textColor="@color/red"
            android:textSize="17.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_pay_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/pd_item_enable_bg"
            android:gravity="center|left"
            android:paddingLeft="14.0dip"
            android:text="+运费"
            android:textColor="@color/fill_order_delivery_light"
            android:textSize="17.0dip" />

        <ImageView
            android:id="@+id/arrow_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/android_list_idex"
            android:clickable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/order_detail_shipping_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/arrow_right1"
            android:gravity="center|right"
            android:paddingLeft="14.0dip"
            android:textColor="@color/red"
            android:textSize="17.0dip" />
    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginBottom="12.0dip"
        android:layout_marginLeft="14.0dip"
        android:layout_marginTop="10.0dip"
        android:background="#ffe1e1e1" />

    <LinearLayout
        android:id="@+id/order_money_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_money_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10.0dip"
            android:paddingBottom="1.0dip"
            android:paddingTop="1.0dip"
            android:text="实付款："
            android:textColor="@color/fill_order_delivery_dark"
            android:textSize="17.0dip" />

        <TextView
            android:id="@+id/order_amount_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginRight="12.0dip"
            android:paddingBottom="1.0dip"
            android:paddingTop="1.0dip"
            android:textColor="@color/red"
            android:textSize="17.0dip"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/order_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="4.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="12.0dip"
        android:paddingBottom="1.0dip"
        android:paddingTop="1.0dip"
        android:textColor="@color/gray"
        android:textSize="15.0dip"/>
</LinearLayout>